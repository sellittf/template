extends ../layouts/application

block append vars
  - var pageTitle = "New course" 

block content
  .row
    .col-md-6.col-md-offset-3
      h1.page-header.text-center New Course

      form.form-horizontal(role='form', method='post', action='/course/create')

        .form-group.has-feedback(class="#{errors ? (errors.name ? 'has-error' : 'has-success') : ''}")
          label.col-sm-3.control-label(for='name') Name
          .col-sm-9
            input#name.form-control(type='text', name='name', value="#{course ? course.name : ''}")
            if errors
             if errors.name
               span.glyphicon.glyphicon-remove.form-control-feedback
               span.help-block= errors.name
             else 
               span.glyphicon.glyphicon-ok.form-control-feedback

        .form-group.has-feedback(class="#{errors ? (errors.startDate ? 'has-error' : 'has-success') : ''}")
          label.col-sm-3.control-label(for='startDate') Start date
          .col-sm-9
            input#start_date.form-control(type='date', name='startDate', placeholder='dd.mm.yyyy', value="#{course ? course.startDate : ''}")
            if errors
             if errors.startDate
               span.glyphicon.glyphicon-remove.form-control-feedback
               span.help-block= errors.startDate
             else 
               span.glyphicon.glyphicon-ok.form-control-feedback

        .form-group.has-feedback(class="#{errors ? (errors.location ? 'has-error' : 'has-success') : ''}")
          label.col-sm-3.control-label(for='location') Location
          .col-sm-9
            input#location.form-control(type='text', name='location', value="#{course ? course.location : ''}")
            if errors
             if errors.location
               span.glyphicon.glyphicon-remove.form-control-feedback
               span.help-block= errors.location
             else 
               span.glyphicon.glyphicon-ok.form-control-feedback

        .form-group.has-feedback(class="#{errors ? (errors.seats ? 'has-error' : 'has-success') : ''}")
          label.col-sm-3.control-label(for='seats') Total seats
          .col-sm-9
            input#totalSeats.form-control(type='text', name='seats', value="#{course ? course.seats : ''}")
            if errors
             if errors.seats
               span.glyphicon.glyphicon-remove.form-control-feedback
               span.help-block= errors.seats
             else 
               span.glyphicon.glyphicon-ok.form-control-feedback

        .form-group.has-feedback(class="#{errors ? (errors.description ? 'has-error' : 'has-success') : ''}")
          label.col-sm-3.control-label(for='description') Description
          .col-sm-9
            textarea#description.form-control(name='description')= course ? course.description : '' 
            if errors
             if errors.description
               span.glyphicon.glyphicon-remove.form-control-feedback
               span.help-block= errors.description
             else 
               span.glyphicon.glyphicon-ok.form-control-feedback

        .form-group
          .col-sm-9.col-sm-offset-3
            input#submit.btn.btn-primary(type='submit', name='submit', value='Create')
